// плашка для карточки товара product.html

.product{
    width 320px
    height 272px
    display: flex
    flex-direction: column
    justify-content: flex-start
    align-items: center
    position: relative
    background-color: white
    box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.15);
    border-radius: 4px;
    @media desktop{
        width: 240px
    }
    @media tablet{
        width: 168px
    }
    &__photo{
        margin-top 4px
        cursor pointer
        user-select none
    }
    &__description{
        width 304px
        padding: 0 8px 0 8px
        color: #1D3566;
        font-size: 13px
        line-height 16px
        bottom 24px
        position absolute
        @media desktop{
            width: 224px
            
        }
        @media tablet{
            width: 152px
        }
    }
    &__price{
        font-size: 16px;
        line-height: 24px;
        color: #000000;
    }
    &__like{
        position absolute
        right 4px
        bottom: 0
        cursor pointer
    }
    &__like_active{
        color: #FF5414;
    }
}
//длинные карточки товара
.card-product{
    background: #FFFFFF;
    width: 100%
    padding: 8px 0
    clear both
    cursor: pointer
    &__boxes{
        height 152px
        background: #FFFFFF;
        box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.15);
        border-radius: 4px;
        margin: 0 16px
        
    }
    &__main-info{
        display block
        padding:16px 16px 0px 16px
        height 48px
        clear both
        line-height: 16px;
    }
    &__photo{
        width: 48px
        height 48px
        float left
    }
    &__image{
        width: 48px
        height 48px
    }
    &__description{
        float left
        font-size: 13px;
        color: #1D3566;
        height 48px
        margin-left 8px
        margin-top 4px

    }
    &__price{
        float: right 
        font-size: 16px;
        color: #000000;
    }
    &__characteristic{
        display block
        clear both
        font-size: 12px;
        line-height: 24px;
        color: #000000;
    }
    &__row{
        display flex
        margin-left: 68px
    }
    &__label{
        width: 62px
    }
    &__value{
        width: 223px
        margin-left: 32px
    }

}
// плашка для акции sale.html
.sale{
    position relative
    background-color #fff
    width 320px
    height 272px
    display flex
    flex-direction: column
    align-items: flex-start
    justify-content flex-start
    box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.15);
    border-radius: 4px;
    cursor pointer
    margin: 0 16px 0 0
    padding: 0
    @media desktop{
        width: 240px
    }
    @media tablet {
        width: 168px
    }
    &__description{
        margin 18px 0 0 16px
        line-height: 32px;
        z-index: 2
    }
    &__title{
        font-size: 22px;
        color: #000000;
        font-weight bolder
        &_value{
            color: #71ACDC
        }
    }
    &__text{
        color: #1D3566;
        font-size: 12px
        line-height: 22px;
    }
    &__label{
        position absolute
        top 48px
        left 0
        z-index: 0
        width: 100%
        display flex
        justify-content: center
        height 168px
    }
    &__image{
        width: 100%
        height 100%
    }
    &__period{
        background-color #434E71;
        position absolute
        bottom 14px
        width 158px
        height 40px
        line-height: 14px
        font-size: 14px;
        ::after{
            content: ''
            position absolute
            border: 20px solid transparent;
            border-right: 20px solid white;
            top 0
            right 0
        }
    }
    &__date{
        color: #FFFFFF;
        margin-left 16px
    }
}

//акции promotion.html
.promotion{
    background-color #fff;
    height 352px
    display flex
    flex-direction: column
    // justify-content flex-start
    // align-items flex-start
    padding: 16px 0 0 16px
    margin: 0
    position: relative
    &__title{
        font-size: 22px;
        line-height: 32px;
        color: #1D3566;
        padding 0
        margin 0
    }
    &__box{
        display flex
        justify-content: space-between
        // align-items: flex-start
        position absolute
        top: 56px
    }
        &__item_hidden{
            display inline
        @media tablet {
            display none
        }
        
    }
}

.footer{
    position relative
    height 188px
    background: #1D3566;
    color: #E6EDEE;
    font-family: 'AGPresquire', arial;
    &__phone{
        font-size: 24px
        line-height 24px
        padding: 22px 0 0 24px
    }
    &__text{
        font-size: 13px;
        line-height: 16px;
        color: #FFFFFF;
        padding-left 24px
    }
    &__buttons{
        width: 100%
        display flex
        position absolute
        top: 96px
        left 0
    }
    &__subscription{
        margin: 0
        padding 0
        width: 123px
        height 52px
        background-color #fff
        font-size: 13px;
        line-height: 52px;
        color: #1D3566;
        float left
        position relative
        cursor pointer
        user-select none

    }
    &__subscription::after{
        content: ''
        position absolute
        top: 0
        right -52px
        border: 26px solid transparent; 
        border-left: 26px solid white;
    }
    &__label{
        width: 89px
        line-height: 13px;
        margin-left: 24px
    }
    &__messages{
        position absolute
        right 0
        bottom: 0
        display flex
        margin-right 4px
        
    }
    &__box{
        width: 52px
        height 52px
        margin 0 8px 0 0
        display flex
        justify-content: center
        align-items: center
    }
    &__facebook, &__vk, &__google{
        width: 37px
        height 37px
        background: #71ACDC;
        transform: rotate(-45deg);
        border: none
        display flex
        justify-content: center
        align-items: center
        cursor pointer
    }
    &__icon{
        transform: rotate(45deg);
        user-select none
    }
}