@import 'normalize.css';
body{
    font-family: 'Helvetica', arial;
    box-sizing: border-box
    background-color red
}

desktop = "(max-width:1023px) and (max-device-width:1023px)"
tablet = "(max-width:767px) and (max-device-width:767px)"
mobile = "(max-width:375px) and (max-device-width:375px)"


.debug {
    border 1px solid #000
    box-sizing: border-box
}

.container{
    position relative
    margin: 0 auto
    max-width: 1024px;
    width: 100%;
}

.header{
    background-color #fff
    width: 100%
    height 60px
    float left
    clear both
    line-height: 60px
    @media tablet {
        height 68px
        line-height: 68px
    }
   
    &__logo{
        margin-left 16px
        height 60px
        display flex
        align-items: center
        float left
        cursor pointer
        @media tablet {
            height 68px
        }
    }
    &__info{
        float: right 
        height 60px
        clear right
        line-height: 60px
        display flex
        align-items: center
        margin 0
        padding 0
    }
    &__feedback{
        color: #2A3864;
        border-bottom: 1px dashed #2A3864;  
        padding: 0 
        margin 0 4px
        cursor pointer
        height 15px
        font-size: 11px
        line-height: 15px
        @media desktop {
            margin 0 77px 0 0
        }
        @media tablet {
           border: none
            margin 0 16px 
            width 72px
            font-size: 12px
            text-align: right 
            line-height: normal
            color: #1D3566;
        }
    }
    &__time-working{
        height 15px
        font-size: 11px
        line-height: 15px
        color: #878787;
        padding 0 12px;
        border-right: 1px solid  #1D3566;
        @media tablet {
            display: none
            
        }
    }
    &__phone{
        height 15px
        line-height: 9px
        font-size: 11px
        padding 0 12px
        margin: 0 12px 0 0
        color: #1D3566;
        clear both
        @media tablet {
            display: none
            
        }
    }
    &__phone_big{
        font-size: 18px;
        letter-spacing: 0.04em;
        margin-right: 0
        padding-right 0
    }
}

.navbar{
    height 48px
    width: 100%
    background-color: #1D3566;
    color: white;
    display flex
    justify-content: center
    &__burger{
        margin-left 8px;
        // float left
    }
    &__action{
        display flex
        justify-content: center
        align-items: center
        position absolute
        right 0
    }
    &__box{
        display flex
        justify-content: center
        align-items: center
        cursor pointer
        // float: left 
        @media (min-device-width:376px) {
            width: 48px
            height 48px
            margin-right 8px
        }
        @media (max-device-width:375px){
            width: 48px
            height 48px
            margin-right 4px
        }
    }
    &__box_hidden{
        @media (min-device-width:376px) {
            display none
        }
        @media (device-width:375px){
            display flex
        }
    }
}

