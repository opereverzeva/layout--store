.first-page{
    background-color #F2F2F2;
    &__menu{
        height 32px
        padding 24px 0 16px 16px
        list-style none 
        display flex
    }
    &__tag{
        margin 0
        padding 0 16px 0 0 
        transition: 0.3s
        &:hover{
            transform: scale(1.05)
            transition: 0.3s
        }

    }
    &__tag-link{
        text-decoration none
        line-height 32px
        color:  #878787;
        font-size: 22px
        font-weight 900
        padding: 0
        margin: 0
        &_active{
            color: var(--main-text-color)    
        }
        
    }
    &__content{
        padding 0 16px 16px  16px 
        display flex
        flex-wrap: wrap
    }
    &__item{
        padding: 0 16px 16px 0
        user-select: none
        &:nth-of-type(3n){
            padding-right 0
        }
    }
    &__item-link{
        text-decoration none
        color: inherit 
    }
}