.modal-filter{
    &_end{
        background-color #fff
    }
    &__inputs{
        display none
    }
    &__name-inputs{
        margin-left: 44px
        &:before{
            content: ''
            display inline-block
            width: 16px
            height 16px
            margin-right 15px
            border-radius: 4px
            border: 1px solid var(--main-text-color)
            position absolute
            top 16px
            left 12px
            cursor pointer
        }
    }
    &__row-reset{
        text-align: center
        width 100%
        cursor pointer
    }
    &__reset{
        text-decoration: none
        color var(--heart-active-color)
        font-weight bold
        border: 0
        background-color var(--main-color)
        &_hidden{
            display none
        }
    }
}
