.slider-info{
    height 128px
    background-color var(--main-color)
    overflow hidden
    position: relative
    margin-left:  16px
    // width: 100%
       &__list{
        padding-left: 24px
        width: 836px
        // width: calc(232px*5+72px*5)
    }
    &__slide{
        // width: 304px
        padding: 20px 48px 10px 24px
        overflow hidden
        cursor pointer
        display flex
        align-content: center
        height 100%
    }
    &__slide-img{
        width: 72px !important
        height 72px
        color: #14B7FF;
        margin 0
        display flex
        align-content: center
        
    }
    &__slide-name{
        display flex
        align-items: center
        justify-content flex-start
        width 144px
        padding-left 16px
        color: var(--main-text-color)
        font-size: 20px
        line-height 24px
        font-weight 900
    }
    &__switch{
        position: absolute
        width: 80px
        bottom: 20px
        left 50%
        margin-left -40px
        display flex
        justify-content: space-between
    }
    &__switch-position{
        width: 6px
        height 6px
        border-radius: 50%
        box-sizing: border-box
        border: 1px solid rgba(29, 53, 102, 0.4);
        cursor pointer
        transition: 0.3s
        &_active, &:active{
            background-color var(--main-text-color)
        }
        &_hidden{
            visibility hidden
        }
        &:hover{
            transform: scale(1.3)
            transition: 0.3s
        }
    }
}