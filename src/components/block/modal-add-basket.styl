.overlay__modal-add-basket{
    background: linear-gradient(180deg, #1D3566 0%, rgba(29, 53, 102, 0) 100%);
    opacity: 0.5;
    position fixed
    top 107px
    left 0
    width 100%
    height 208px
    cursor pointer
}
.modal-add-basket{
    position absolute
    width 535px
    height 88px
    top 123px
    left 50%
    border-radius: 10px
    margin-left -267px
    background: #F5F8F8;
    box-shadow: 0px 2px 12px rgba(0, 0, 0, 0.17);
    display flex
    justify-content: space-between
    align-items: center
    padding: 0 15px
    &__text{
        width 226px
        flex-grow 1
        font-size: 13px;
        line-height: 16px;
    }
    &__title{
        height 13px
        color: var(--price-color)
        margin 0
        padding 0
        font-size: 13px;
        line-height: 16px;
        margin-bottom 13px
    }
    &__name{
        height 32px
        color: var(--main-text-color)
        margin 0
        padding 0
        font-size: 13px;
        line-height: 16px;
    }
    &__close{
        position absolute
        width 24px
        height 24px
        text-align: center
        line-height 24px
        top 12px
        right 12px
        color: var(--main-text-color)
        cursor pointer
        user-select none
    }
    &__details{
        width 106px
        height 35px
        position: absolute
        top 43px
        right 15px
        font-size: 13px;
        line-height: 16px;
        margin 0
        padding 0
        color: var(--main-text-color)
    }
    &__main-detail{
        display flex
        justify-content: space-between
        margin 0
        padding 0
    }
    &__sum{
        margin 0
        padding 0    
    }
    &__change{
        border-bottom: 1px dashed var(--header-text-color);  
        padding: 0 
        margin 0 4px
        cursor pointer
        height 15px
        font-size: 10px
        line-height: 15px
        margin 0
        padding 0
    }
}