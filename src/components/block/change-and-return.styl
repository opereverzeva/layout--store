.change-and-return{
    background-color var(--main-color)
    position: relative
    margin: 30px 20px 16px 16px
    &__menu{
        color var(--main-text-color)
        font-size: 14px
        line-height 34px
        height 34px
        width 100%
    }
    &__menu-list{
        list-style none
        display flex
        margin 0
        padding 0
        height 16px
        
    }
    &__menu-item{
        padding: 0 4px
        user-select: none
        position relative
    }
    &__name{
        display inline
        cursor pointer
        text-decoration none
        color inherit
    }
    &__title-page{
        margin 0
        padding 6px 0 16px 0
        
        line-height 32px
        cursor: auto
        color: var(--price-color)
        // &_article{
        //     height 64px
        // }
    }
    &__article{
        margin 0 0 30px 0
    }
    &__list{
        list-style url('../components/icons/Rectangle.svg')
        list-style-position outside
        margin 0
        padding 0
    }
    &__item{
        color: #626262;
        font-style 14px
        line-height 24px
        margin-left: 32px
        padding-bottom 24px
        &:last-of-type{
            padding-bottom 0    
        }
    }
    &__introduce{
        font-style 14px
        line-height 24px
        margin: 16px 0 16px 0
        padding 0
    }
}