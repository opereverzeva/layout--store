.slider-brend{
    background-color var(--main-color)
    height 176px
    position: relative
    &__title{
        height 64px
        display flex
        align-items: center 
        justify-content flex-start
        padding-left 16px
        color: var(--main-text-color)
        font-size: 22px
        font-weight 700
    }
    &__show-all{
        position absolute
        right 16px
        top 16px
        height 38px
        width: 128px
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.08);
        border-radius: 19px;
        border: none
        background-color var(--main-color)
        color var(--main-text-color)
        font-size: 13px
        cursor pointer
        transition: 0.3s
        &:hover{
            transform: scale(1.05)
            transition: 0.3s
        }

    }
    &__slider{
        margin 6px 34px 23px 34px
        display flex
        justify-content: space-between
        align-items: center
    }
    &__nav{
        border: 0
        margin 0
        padding 0
        cursor pointer
        transition: 0.3s
        &:hover{
            transform: scale(1.05)
            transition: 0.3s
        }
    }
    &__list{
        width: 836px
        height 82px
        list-style none 
        margin 0
        padding 0
        display flex
        justify-content: space-between
        align-items: center
        overflow hidden
    }
    &__brend-img{
        width: 148px
        margin 0 12px
    }
    &__next{
        transform: scale(-1)
    }
}