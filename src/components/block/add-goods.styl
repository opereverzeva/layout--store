@import '../components/elements/card-add-goods.styl';

.add-goods{
    width calc(100%-16px)
    padding 37px 0 0 16px
    &__title-page{
        width 264px
        height 64px
        font-size: 20px
        line-height 24px
        margin 0
        padding 0
    }
    &__section-name{
        color: var(--no-active-button-color)
        font-size: 15px
    }
    &__cards-goods{
        padding 0
        margin 14px 16px 24px 0
        height 176px
        display flex
        flex-wrap: wrap
        align-items: center
        justify-content flex-start
    }
    &__item{
        padding 0
        margin 0 8px 0 0 
        &:nth-of-type(5n){
            margin 0    
        }
    }
}