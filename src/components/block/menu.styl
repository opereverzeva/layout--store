@import '../components/elements/open-menu.styl';


// desktop = "(max-width:1023px) and (max-device-width:1023px)"
// tablet = "(max-width:767px) and (max-device-width:767px)"
// mobile = "(max-width:376px) and (max-device-width:376px)"

.menu{
    width 100%
    background-color: var(--grey-background-color)
    clear: both
    min-height: 50px
    position: relative
    &::after {
        content: "";
        display: table;
        clear: both;
    }
    @media desktop {
        min-height 80px
    }
    @media mobile {
        height 332px
    }
    &__name{
        display: none
        width 100%
        clear: both
        margin-left:  16px
        padding-top 10px
        color: var(--main-text-color)
        @media mobile{
            display: inline-block
        }
    }
    &__list{
        list-style: none; 
        width: 100%

    }
    &__item{
        float left
        height 50px
        cursor: pointer;
        user-select none
        // position: relative
        min-width: (1023px / 10)
        font-size 14px
        box-sizing: border-box
        padding 0 8px
        line-height: 50px
        // @media desktop{
        //     line-height 40px
        //     height 40px
        //     min-width 120px
        //     margin-left 16px
        //     padding-left: 8px
        //     padding-right 8px
        // }
        @media desktop {
            width: 120px
            text-align: start
            margin 0  0 0 40px
            padding: 0 30px 0 0
            display flex
            justify-content: flex-start
            line-height 48px
            height 48px
            
        }

    }
        &__title{
            position relative
            cursor pointer
            line-height 50px
            text-align center
            display block
            text-decoration: none
            color: inherit
            &::before{
                clear: both}
            &::after{
                clear: both}
            @media desktop{
                line-height 40px          
            }
            @media tablet{
                line-height 48px          
            }
         }
    
        &__item:hover, &__item_active{
            background-color var(--main-color)
        }
        &__item:hover  &__open-section, &__item_active &__open-section{
            position static
            display: block
            z-index: 2

        }
        &__open-section{
            display: none
               
        }

        &__open-section_active{
            display: inline-block
            margin 0
            padding 0
            position relative
        }

    }


