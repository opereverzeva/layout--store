.izbrannye-tovary{
    margin: 30px 16px
    // width: 100%
    &__menu{
        color var(--main-text-color)
        font-size: 14px
        line-height 34px
        height 34px
        width 100%
    }
    &__menu-list{
        list-style none
        display flex
        margin 0
        padding 0
        height 16px
    }
    &__menu-item{
        padding: 0 4px
        user-select: none
        position relative
    }
    &__name{
        display inline
        cursor pointer
        text-decoration none
        color inherit
        margin 0
        padding 0
    }
    &__title-page{
        margin 0
        padding 6px 0 16px 0
        height 32px
        line-height 32px
        cursor: auto
        color: var(--price-color)
    }
    &__boxes{
        height 560px
        margin-top 16px
        display flex
        flex-wrap: wrap
    }
    &__box{
        padding: 0 16px 16px 0
        user-select: none
        &:nth-of-type(3n){
            padding-right 0
        }
    }
    
    &__item-link{
        text-decoration none
        color: inherit 
    }
}