.pay-and-delivery{
    background-color var(--main-color)
    position: relative
    margin: 30px 20px 16px 16px
    &__menu{
        color var(--main-text-color)
        font-size: 14px
        line-height 34px
        height 34px
        width 100%
    }
    &__menu-list{
        list-style none
        display flex
        margin 0
        padding 0
        height 16px
    }
    &__menu-item{
        padding: 0 4px
        user-select: none
        position relative
    }
    &__name{
        display inline
        cursor pointer
        text-decoration none
        color inherit
    }
    &__title-page{
        margin 0
        padding 6px 0 24px 0
        line-height 32px
        cursor: auto
        color: var(--price-color)
    }
    &__article{
        width 684px
        margin 0 48px 30px 0
    }
    &__list{
        list-style none
        list-style-position outside
        margin 0
        padding 0
        counter-reset: num
    }
    &__item-zakaz{
        color: #626262;
        list-style-position outside
        font-style 14px
        line-height 24px
        display: flex
        padding-bottom 24px
        &:last-of-type{
            padding-bottom 0    
        }
        &::before{
            content: counter(num) ' |'
            counter-increment: num  
            font-size: 22px
            color: var(--price-color)
            line-height 32px
            font-weight 900
            display inline
        }
    }
    &__text-item{
        margin-left: 16px
        padding 0
        display flex
        &_pay{
            flex-direction: column    
        }
    }
    &__item-pay{
        padding-bottom 30px
        display flex
        justify-content flex-start
        align-items flex-start
    }
    &__item-icon{
        font-size: 17px
        margin 0
        padding 0
        width 24px
        height auto
        display flex
        justify-content: center
        align-items: center
    }
    &__min-head{
        margin 0
        padding 0 0 15px 0  
    }
    &__main-text{
        margin 0
        padding: 0 0 16px 0
        color: #626262;
        &_with-icon{
            margin-left -36px
            display flex
            justify-content flex-start
            align-items flex-start
        }
    }
    &__item-desc{
        padding-left: 14px
    }
    &__list-ul{
        list-style url('../components/icons/Rectangle.svg')
        list-style-position outside
        margin 0
        padding 0
    }
    &__item{
        color: #626262;
        font-style 14px
        line-height 24px
        margin-left: 32px
        padding-bottom 24px
        &:last-of-type{
            padding-bottom 0    
        }
    }
    &__introduce{
        font-style 14px
        line-height 24px
        margin: 16px 0 16px 0
        padding 0
    }
}