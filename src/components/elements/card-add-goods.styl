.card-add-goods{
    width 178px
    height 176px
    position relative
    display flex
    flex-direction: column
    justify-content flex-start
    align-items: flex-start
    background:var(--main-color)
    box-shadow: 0px 0px 4px var(--box-shadow-color)
    border-radius: 4px;
    &__img{
        max-width 170px
        height auto 
        margin 4px 0 8px 8px
        border 0
    }
    &__description{
        width 100px
        height 32px
        font-size: 13px
        line-height 16px
        color: var(--main-text-color)
        padding 0 18px 4px 8px
        margin  0

    }
    &__price{
        width 100%
        height 16px
        font-size: 16px
        line-height 16px
        margin 0
        padding 0
        padding-left 8px
    }
    &__add{
        position absolute
        bottom 23px
        right 15px
        width 18px
        height 18px
        border-radius: 50%
        background-color #14B7FF
        color: var(--main-color)
        display flex
        justify-content: center
        align-items: center
        cursor pointer
    }
}