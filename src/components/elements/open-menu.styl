desktop = "(max-width:1023px) and (max-device-width:1023px)"
tablet = "(max-width:767px) and (max-device-width:767px)"
mobile = "(max-width:375px) and (max-device-width:375px)"

.menu{
    &__select{
        display: none
        
        &_active{
            position: absolute
            top: 25px
            left 0
            width 1024px
            box-sizing: border-box
            background-color var(--main-color)
            box-shadow: 0px 4px 16px var (--box-shadow-color)
            color var(--main-text-color)
            min-height: 590px
            z-index 1
            display: flex
            flex-direction: row
            justify-content: flex-start
            align-items: flex-start
            flex-wrap: wrap
            margin: 26px 8px
            cursor: auto   
        }
        @media desktop{
            width: 768px 
            top 40px           
        }
