
.menu{
    &__select{
        position: absolute
        left: 0
        display: block
        width: 100%
        box-sizing: border-box
        background-color var(--main-color)
        box-shadow: 0px 4px 16px var (--box-shadow-color)
        color var(--main-text-color)
        min-height: 590px
        z-index 2
        display: flex
        flex-direction: row
        justify-content: flex-start
        align-items: flex-start
        flex-wrap: wrap
        padding: 26px 12px
        margin: 0
        cursor: auto   
        &::before{
            clear: both}
        &::after{
            clear: both}
        @media mobile{
            display none           
        }
    }
        &__box{
        color:  var(--main-text-color)
        font-family: AGPresquire Arial, Helvetica, sans-serif;
        font-size: 12px
        line-height 12px
        padding: 0px 12px
        width:  136px
        text-align: left
        @media desktop {
            width: 120px
        }

    }
        &__box-title{
            font-size: 18px;
            line-height: 13px;
            margin-bottom 30px
            cursor pointer
            &:hover{
                opacity 0.5
            }
        } 
        &__box-list{
            list-style none 
            margin 0
            padding: 0
            line-height: 13px;
        }
        &__box-textarea{
            // height 48px
            line-height 13px;
            text-align: left
            margin-bottom 30px
            cursor pointer
            
        }
        &__box-text{
            cursor pointer
            font-size: 12px
            line-height 13px
            text-align left
            display block
            text-decoration: none
            color: inherit
            &:hover{
                opacity 0.5
            }
        }
}
.m-menu
    &__select{
        display: none 
        @media mobile{
            display: block    
        } 
    position absolute
    left 0
    top -77px
    z-index: 1
    background-color: var(--grey-background-color)
    clear: both
    width 100%
    height 332px
    display flex
    justify-content: center
    align-items: center
    flex-direction: column   
    &__head{
        display flex
        color: var(--main-text-color) 
        font-size: 22px   
    }
    &__link{
        text-decoration: none 
        color: var(--main-text-color) 
        display flex
        justify-content: center
        align-items: center 
        font-size: 22px 
    }
    }