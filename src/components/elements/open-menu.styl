        &__box{
        color:  var(--main-text-color)
        font-family: AGPresquire Arial, Helvetica, sans-serif;
        font-size: 12px
        line-height 43px
        padding: 0px 12px
        width:  136px
        @media desktop {
            width: 120px
        }

    }
        &__box-title{
            font-size: 18px;
            line-height: 13px;
            margin-bottom 30px
            cursor pointer
        } 
        &__box-list{
            list-style none 
            margin 0
            padding: 0
        }
        &__box-textarea{
            height 48px
            line-height normal
            margin-top 5px
            cursor pointer
        }
}